<template>
  <div class="chart-wrap">
    <canvas
      id="chartLine1"
      class="chart"
      style="width: {{width}}px; height: {{height}}px;"
      ontouchstart="ontouchstart"
    ></canvas>
  </div>
</template>

<script>
import Charts from "apex-ui/components/charts/qacharts.js";
// import Charts from 'apex-ui/components/charts/qacharts-min.js'

let $chart = null;

export default {
  props: {
    width: {
      default: 600
    },
    height: {
      default: 400
    }
  },
  data() {
    return {};
  },
  initChart() {
    return new Promise((resolve, reject) => {
      $chart = new Charts({
        element: this.$element("chartLine1"),
        width: this.width,
        height: this.height,
        legend: {
          shapeWidth: 30,
          shapeHeight: 15
        },
        xAxis: {
          type: "category",
          data: ["1", "2", "3", "4", "5", "6", "7"]
        },
        series: [
          {
            name: "数据",
            type: "line",
            data: [820, 932, 901, 934, 1290, 1330, 1320]
          }
        ],
        onRenderComplete: () => {
          console.log("chartLine1 renderComplete");
          resolve();
        }
      });
    });
  },
  ontouchstart(e) {
    console.log(`chartLine1 touchstart`);
  }
};
</script>

